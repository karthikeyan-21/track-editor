package com.editor.track;

import java.util.List;

import org.eclipse.swt.graphics.GC;
import org.eclipse.swt.graphics.Point;

public class Tile {

	private Vector fPosition;
	private List<TileInfo> tileInfo;
	
	public Tile(List<TileInfo> info) {
		tileInfo = info;
	}
	
	public void setPosition(Vector position) {
		fPosition = position;
	}
	
	public void draw(GC gc) {
		if(fPosition != null ) {
			for(int i = tileInfo.size()-1;i >= 0;i--) {
				TileInfo info = tileInfo.get(i);
				if(info != null) {
					gc.drawImage(info.getImage(), (int)fPosition.x, (int)fPosition.y);
					LineSegment collisionRay = info.getCollisionRay();
					if(collisionRay != null) {
						Point source = collisionRay.getSource();
						Point destination = collisionRay.getDestination();
						gc.drawLine((int)fPosition.x+source.x, (int)fPosition.y+source.y, 
								(int)fPosition.x+destination.x, (int)fPosition.y+destination.y);
					}
				}
			}
		}
	}

}
